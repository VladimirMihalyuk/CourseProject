<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/accountigFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.courseproject.log_in.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_logUpFragment"
            app:destination="@id/logUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_accountigFragment"
            app:destination="@id/accountigFragment" />
    </fragment>
    <fragment
        android:id="@+id/logUpFragment"
        android:name="com.example.courseproject.log_up.LogUpFragment"
        android:label="fragment_log_up"
        tools:layout="@layout/fragment_log_up" >
        <action
            android:id="@+id/action_logUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountigFragment"
        android:name="com.example.courseproject.accounting.AccountigFragment"
        android:label="fragment_accountig"
        tools:layout="@layout/fragment_accountig" />
    <fragment
        android:id="@+id/deptsFragment"
        android:name="com.example.courseproject.depts.DeptsFragment"
        android:label="fragment_depts"
        tools:layout="@layout/fragment_depts" />
    <fragment
        android:id="@+id/graphsFragment"
        android:name="com.example.courseproject.graphs.GraphsFragment"
        android:label="fragment_graphs"
        tools:layout="@layout/fragment_graphs" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.courseproject.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/pireChartsFragment"
        android:name="com.example.courseproject.pie_charts.PireChartsFragment"
        android:label="fragment_pire_charts"
        tools:layout="@layout/fragment_pire_charts" />
</navigation>